PORT_B		EQU	061H		; PORT B READ/WRITE DIAGNOSTIC REGISTER
PORT_C		EQU	062H		; 8255 PORT C ADDR
CMD_PORT	EQU	063H


KB_DATA 	EQU	060H		; KEYBOARD SCAN CODE PORT
